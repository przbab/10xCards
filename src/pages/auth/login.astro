---
import AuthForm from '@/components/ui/AuthForm';
import Layout from '../../layouts/Layout.astro';
---

<Layout>
    <h1 class="text-2xl font-bold text-center mb-4">Log In to Your Account</h1>
    <AuthForm client:load type="login" />
    <div class="text-center mt-4">
        <a class="text-blue-500 hover:underline" href="/auth/register">Don't have an account? Sign up</a>
        <br />
        <a class="text-blue-500 hover:underline" href="/auth/recover">Forgot your password? Recover it</a>
    </div>
</Layout>
