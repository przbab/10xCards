---
import AuthForm from '@/components/ui/AuthForm';
import Layout from '../../layouts/Layout.astro';
---

<Layout>
    <h1 class="text-2xl font-bold text-center mb-4">Create a New Account</h1>
    <AuthForm onSubmit={(data) => console.log(data)} type="register" />
    <div class="text-center mt-4">
        <a class="text-blue-500 hover:underline" href="/auth/login">Already have an account? Log in</a>
    </div>
</Layout>
